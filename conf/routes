GET        /initialize          controller.AppController.initialize
GET        /recreate            controller.AppController.recreate
GET        /reindex             controller.AppController.reindex
GET        /load                controller.AppController.load

->         /clues               resource.clue.ClueRouter
->         /categories          resource.category.CategoryRouter
->         /shows               resource.show.ShowRouter

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)

