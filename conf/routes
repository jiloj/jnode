GET        /initialize          controller.AppController.initialize
GET        /reinitialize        controller.AppController.reinitialize
GET        /clear               controller.AppController.clear
GET        /fetch               controller.AppController.fetch
GET        /index               controller.AppController.index

->         /clues               resource.clue.ClueRouter
->         /categories          resource.category.CategoryRouter
->         /shows               resource.show.ShowRouter

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)

